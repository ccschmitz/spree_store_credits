<% if (spree_current_user && spree_current_user.store_credits_total > 0) %>
  <% usable_amount = number_with_precision(@order.store_credit_maximum_usable_amount, :precision => 2, :separator => '.', :delimiter => '') %>
  <label>Store Credits</label><br>
  <%= form.text_field :store_credit_amount,
                      :size => 19,
                      :value => usable_amount,
                      :data => { :store_credit_maximum_amount => usable_amount,
                                 :store_credit_maximum_amount_message => Spree.t('store_credit_maximum_amount',
                                 :amount => number_to_currency(@order.store_credit_maximum_usable_amount))
                               } %>
  <span class="help-block">
    You have <strong><%= number_to_currency(spree_current_user.store_credits_total) %></strong> of store credits available.
  </span>
<% end %>
